<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="20dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    >


    <com.makeramen.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="46dp"
        android:scaleType="centerCrop"
        android:src="#55000000"
        app:riv_border_width="0dip"
        app:riv_corner_radius="30dip"
        app:riv_oval="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:alpha="0.3"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_autorenew_white_48dp"
        android:padding="10dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:id="@+id/imageView11"
        android:alpha="0.3"/>


    <com.makeramen.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="46dp"
        android:scaleType="centerCrop"
        android:src="#55000000"
        app:riv_border_width="0dip"
        app:riv_corner_radius="30dip"
        app:riv_oval="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_history_white_48dp"
        android:padding="10dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"/>


    <com.makeramen.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="46dp"
        android:scaleType="centerCrop"
        android:src="#55000000"
        app:riv_border_width="0dip"
        app:riv_corner_radius="30dip"
        app:riv_oval="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:alpha="0.3"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_alarm_white_48dp"
        android:padding="10dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView4"
        android:alpha="0.3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/schedule_type_hourly_title"
        android:id="@+id/textView12"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="100dp"
        android:layout_above="@+id/textView13"
        android:textColor="#fff"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/schedule_type_hourly_help"
        android:id="@+id/textView13"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/imageView11"
        android:layout_toStartOf="@+id/imageView11"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        android:textColor="#fff"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textSize="17dp"/>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@android:id/empty"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_horizontal"
                  android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView10"
            android:src="@drawable/ic_intro_schedules"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/schedule_type_help_title"
            android:id="@+id/textView10"
            android:padding="20dp"
            android:alpha="0.9"
            android:textAlignment="center"
            android:textColor="#fff"
            android:gravity="center_horizontal"/>

    </LinearLayout>


</RelativeLayout>